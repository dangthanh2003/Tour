@model IEnumerable<QLTours.Models.Contact>

@{
    ViewData["Title"] = "Danh sách Liên Hệ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Danh sách Liên Hệ</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Email</th>
                        <th>Chủ đề</th>
                        <th>Nội dung</th> <!-- Thêm cột Nội dung -->
                        <th>Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.Subject</td>
                                <td>@item.Message</td> 
                                <td>
                                    @if (item.Status == "Đã xem")
                                    {
                                        <span class="badge bg-success">Đã xem</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Chưa xem</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-contactId="@item.ContactId" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Xem Chi Tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Không có liên hệ nào.</td> <!-- Thêm cột cho Nội dung -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-muted text-center">
            Tổng số: @Model.Count() liên hệ
        </div>
    </div>
</div>
