@model QLTours.Models.Manage

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Tạo Tài Khoản</h3>
        </div>
        <div class="card-body">
            <!-- Hiển thị lỗi tổng quát -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Tên Đăng Nhập</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mật Khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Vai Trò</label>
                    <select asp-for="Role" class="form-select">
                        <option value="true">Admin</option>
                        <option value="false">Employee</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Tạo Tài Khoản
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay Lại Danh Sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
