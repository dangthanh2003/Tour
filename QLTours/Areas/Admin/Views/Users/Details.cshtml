@model QLTours.Models.User

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Chi Tiết Người Dùng</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Tên Người Dùng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>


                <dt class="col-sm-3 font-weight-bold">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 font-weight-bold">Số Điện Thoại:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại Danh Sách
            </a>
        </div>
    </div>
</div>
