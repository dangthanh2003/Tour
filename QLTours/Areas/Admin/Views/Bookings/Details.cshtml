@model QLTours.Models.Booking

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Chi Tiết Booking</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Tổng Tiền:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Total) VND</dd>

                <dt class="col-sm-3 font-weight-bold">Ngày Đặt:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BookingDate)</dd>

                <dt class="col-sm-3 font-weight-bold">Trạng Thái:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3 font-weight-bold">Tên Tour:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tour.TourName)</dd>

                <dt class="col-sm-3 font-weight-bold">Người Dùng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Username)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại Danh Sách
            </a>
        </div>
    </div>
</div>
