@model QLTours.Models.DetailItinerary

@{
    ViewData["Title"] = "Chỉnh sửa Detail Itinerary";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h3 class="card-title">Chỉnh sửa Detail Itinerary</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <input type="hidden" asp-for="DetailId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <select asp-for="ItineraryId" class="form-control" asp-items="ViewBag.ItineraryId"></select>
                    <label asp-for="ItineraryId">Lịch trình</label>
                    <span asp-validation-for="ItineraryId" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ThoiGian" class="form-control" />
                    <label asp-for="ThoiGian">Thời Gian</label>
                    <span asp-validation-for="ThoiGian" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="HoatDong" class="form-control" />
                    <label asp-for="HoatDong">Hoạt Động</label>
                    <span asp-validation-for="HoatDong" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="MoTa" class="form-control" />
                    <label asp-for="MoTa">Mô Tả</label>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
