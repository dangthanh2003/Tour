@model QLTours.Models.DetailItinerary

@{
    ViewData["Title"] = "Chi tiết Detail Itinerary";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3 class="card-title">Chi tiết Detail Itinerary</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Thời Gian</dt>
                <dd class="col-sm-9">@Model.ThoiGian</dd>

                <dt class="col-sm-3">Hoạt Động</dt>
                <dd class="col-sm-9">@Model.HoatDong</dd>

                <dt class="col-sm-3">Mô Tả</dt>
                <dd class="col-sm-9">@Model.MoTa</dd>

                <dt class="col-sm-3">Lịch Trình</dt>
                <dd class="col-sm-9">@Model.Itinerary.ItineraryId</dd>
            </dl>
            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model.DetailId" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
