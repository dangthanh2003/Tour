@model QLTours.Models.ItineraryImage

@{
    ViewData["Title"] = "Chỉnh Sửa Hình Ảnh";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h3>Chỉnh Sửa Hình Ảnh</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.ImageId" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="ImageId" />

                <!-- Mã Lịch Trình -->
                <div class="mb-3">
                    <label asp-for="ItineraryId" class="form-label">Mã Lịch Trình</label>
                    <input asp-for="ItineraryId" class="form-control" readonly />
                </div>

                <!-- Đường Dẫn Hình Ảnh -->
                <div class="mb-3">
                    <label asp-for="ImagePath" class="form-label">Đường Dẫn Hình Ảnh Hiện Tại</label>
                    <input asp-for="ImagePath" class="form-control" readonly />
                </div>

                <!-- Tải Hình Ảnh Mới -->
                <div class="mb-3">
                    <label for="newImage" class="form-label">Tải Hình Ảnh Mới</label>
                    <input type="file" name="newImage" class="form-control" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Lưu Thay Đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
