@model QLTours.Models.ItineraryImage

@{
    ViewData["Title"] = "Xóa Hình Ảnh";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h3>Xác Nhận Xóa Hình Ảnh</h3>
        </div>
        <div class="card-body">
            <p class="text-center text-danger fw-bold">Bạn có chắc chắn muốn xóa hình ảnh này?</p>

            <dl class="row">
                <!-- ID Hình Ảnh -->
                <dt class="col-sm-3">Mã Hình Ảnh</dt>
                <dd class="col-sm-9">@Model.ImageId</dd>

                <!-- Mã Lịch Trình -->
                <dt class="col-sm-3">Mã Lịch Trình</dt>
                <dd class="col-sm-9">@Model.ItineraryId</dd>

                <!-- Hình Ảnh -->
                <dt class="col-sm-3">Hình Ảnh</dt>
                <dd class="col-sm-9">
                    <img src="@Url.Content(Model.ImagePath)" alt="Hình Ảnh" width="200" />
                </dd>
            </dl>

            <div class="text-center mt-4">
                <form method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ImageId)

                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                </form>
                <a href="@Url.Action("Index")" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>
