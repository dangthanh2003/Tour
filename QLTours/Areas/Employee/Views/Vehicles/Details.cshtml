@model QLTours.Models.Vehicle

@{
    ViewData["Title"] = "Chi Tiết Xe";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Chi Tiết Xe</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Tên Xe:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VehicleName)</dd>

                <dt class="col-sm-3 font-weight-bold">Mô Tả:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.VehicleId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay Lại Danh Sách
            </a>
        </div>
    </div>
</div>
