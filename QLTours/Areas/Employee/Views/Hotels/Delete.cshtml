@model QLTours.Models.Hotel

@{
    ViewData["Title"] = "Xóa Hotel";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Xóa Hotel</h3>
        </div>
        <div class="card-body">
            <p>Bạn có chắc chắn muốn xóa khách sạn sau?</p>
            <dl class="row">
                <dt class="col-sm-3">Tên Hotel</dt>
                <dd class="col-sm-9">@Model.HotelName</dd>

                <dt class="col-sm-3">Mô Tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Địa Chỉ</dt>
                <dd class="col-sm-9">@Model.Address</dd>
            </dl>
            <div class="text-center mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="HotelId" />
                    <button type="submit" class="btn btn-danger px-4" onclick="return confirm('Bạn có chắc chắn muốn xóa booking này không?');">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Quay Lại
                </a>
            </div>
           
        </div>
    </div>
</div>
