@model QLTours.Models.Category

@{
    ViewData["Title"] = "Xóa Category";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Xóa Category</h3>
        </div>
        <div class="card-body">
            <p>Bạn có chắc chắn muốn xóa Category này?</p>
            <dl class="row">
                <dt class="col-sm-3">Tên Category</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>

                <dt class="col-sm-3">Mô Tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CategoryId" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
