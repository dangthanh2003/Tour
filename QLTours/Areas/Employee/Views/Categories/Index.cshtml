@model IEnumerable<QLTours.Models.Category>

@{
    ViewData["Title"] = "Danh Sách Danh Mục";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Danh Sách Danh Mục</h3>
        </div>
        <div class="card-body">
            <p>
                <a class="btn btn-success" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Tạo Danh Mục Mới
                </a>
            </p>
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th class="text-center">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.CategoryId">
                                    <i class="bi bi-eye"></i> Chi Tiết
                                </a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-muted text-center">
            Tổng số: @Model.Count() danh mục
        </div>
    </div>
</div>
