@model QLTours.Models.Itinerary

@{
    ViewData["Title"] = "Chỉnh Sửa Lịch Trình";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h3 class="card-title mb-0">Chỉnh Sửa Lịch Trình</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="ItineraryId" />

                <div class="mb-3">
                    <label asp-for="TourId" class="form-label">Tên Tour</label>
                    <select asp-for="TourId" class="form-select" asp-items="ViewBag.TourId"></select>
                    <span asp-validation-for="TourId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ngay" class="form-label">Ngày</label>
                    <input asp-for="Ngay" type="date" class="form-control" />
                    <span asp-validation-for="Ngay" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ChiTietLichTrinh" class="form-label">Chi Tiết Lịch Trình</label>
                    <textarea asp-for="ChiTietLichTrinh" class="form-control"></textarea>
                    <span asp-validation-for="ChiTietLichTrinh" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu Thay Đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
