@model IEnumerable<QLTours.Models.TourDetail>

@{
    ViewData["Title"] = "Danh Sách Chi Tiết Tour";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Danh Sách Chi Tiết Tour</h3>
        </div>
        <div class="card-body">
            <p>
                <a class="btn btn-success" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Thêm Chi Tiết Tour Mới
                </a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Tour.TourName)</th>
                            <th>@Html.DisplayNameFor(model => model.Vehicle.VehicleName)</th>
                            <th>@Html.DisplayNameFor(model => model.Hotel.HotelName)</th>
                            <th class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Tour.TourName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Vehicle.VehicleName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Hotel.HotelName)</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.TourDetailId">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.TourDetailId">
                                        <i class="bi bi-eye"></i> Chi Tiết
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.TourDetailId">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted text-center">
            @if (Model.Any())
            {
                <span>Tổng số: @Model.Count() chi tiết tour</span>
            }
        </div>
    </div>
</div>
