@model QLTours.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Tạo Booking</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                        <option value="">-- Chọn Người Dùng --</option>
                    </select>
                    <label asp-for="UserId">Người Dùng</label>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId">
                        <option value="">-- Chọn Tour --</option>
                    </select>
                    <label asp-for="TourId">Tour</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Total" class="form-control" />
                    <label asp-for="Total">Tổng Tiền</label>
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="BookingDate" type="date" class="form-control" />
                    <label asp-for="BookingDate">Ngày Đặt</label>
                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Status" class="form-control" />
                    <label asp-for="Status">Trạng Thái</label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Tạo
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
