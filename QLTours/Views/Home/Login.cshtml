@model QLTours.Models.User
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Jost', sans-serif;
        background: linear-gradient(to right, #4facfe, #00f2fe);
    }

    .container2 {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .register-container {
        display: flex;
        width: 90%;
        max-width: 900px;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    .register-image {
        flex: 1;
        background: url('/Adminassets/images/mn.jpg') center/cover no-repeat;
    }

    .register-form {
        flex: 1;
        padding: 40px;
        color: #333;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .register-form h2 {
            font-size: 2em;
            color: #4facfe;
            margin-bottom: 20px;
            text-align: center;
        }

    .form-control {
        width: 100%;
        padding: 15px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 1em;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #4facfe;
            outline: none;
        }

    .button2 {
        width: 100%;
        padding: 15px;
        background: #4facfe;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 1em;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .button2:hover {
            background: #007bc2;
        }

    .google-login-button a {
        display: block;
        text-align: center;
        padding: 12px;
        margin-top: 10px;
        background-color: #db4437;
        color: white;
        border-radius: 8px;
        font-size: 1em;
        font-weight: bold;
        text-decoration: none;
        transition: background 0.3s ease;
    }

        .google-login-button a:hover {
            background-color: #c1351d;
        }

    .link-container {
        text-align: center;
        margin-top: 20px;
    }

        .link-container a {
            color: #007bc2;
            text-decoration: none;
            margin: 0 10px;
            font-size: 0.9em;
        }

            .link-container a:hover {
                text-decoration: underline;
            }

    .text-dark {
        color: #ff0000;
    }
</style>

<div class="container2">
    <div class="register-container">
        <div class="register-image"></div>
        <div class="register-form">
            <h2>Đăng Nhập</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <input asp-for="Email" placeholder="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-dark"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="Mật khẩu" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-dark"></span>
                </div>
                <button class="button2" type="submit">Đăng Nhập</button>
                <div class="google-login-button">
                    <a href="@Url.Action("LoginWithGoogle", "Account")">Đăng nhập bằng Google</a>
                </div>
                <div class="link-container">
                    <a asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu?</a>
                    <a asp-controller="Home" asp-action="Register">Đăng ký ngay !!</a>
                </div>
                <div asp-validation-summary="All" class="text-dark"></div>
            </form>
        </div>
    </div>
</div>
