@{
    Layout = "_Layout";
}

<h2 class="text-center my-4 text-primary">Thay Đổi Mật Khẩu</h2>

@if (ViewBag.PasswordMessage != null)
{
    <div class="alert alert-info">
        @ViewBag.PasswordMessage
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-12">
        <form asp-action="ChangePassword" method="post" class="password-change-form">
            <div class="card shadow-lg custom-card">
                <div class="card-body">
                    <!-- Mật khẩu hiện tại -->
                    <div class="form-group mb-4">
                        <label for="CurrentPassword" class="form-label">Mật khẩu hiện tại</label>
                        <input type="password" class="form-control custom-input" id="CurrentPassword" name="currentPassword" required />
                    </div>

                    <!-- Mật khẩu mới -->
                    <div class="form-group mb-4">
                        <label for="NewPassword" class="form-label">Mật khẩu mới</label>
                        <input type="password" class="form-control custom-input" id="NewPassword" name="newPassword" required />
                    </div>

                    <!-- Xác nhận mật khẩu mới -->
                    <div class="form-group mb-4">
                        <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" class="form-control custom-input" id="ConfirmPassword" name="confirmPassword" required />
                    </div>

                    <!-- Nút gửi -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn custom-btn btn-lg">Thay Đổi Mật Khẩu</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    /* Custom Styles for Password Change Form */
    .password-change-form {
        background-color: #f7f8fa;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .custom-card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
        padding: 30px;
    }

    .custom-input {
        font-size: 16px;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            background-color: #fff;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    .form-label {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
    }

    .custom-btn {
        background-color: #007bff;
        color: #fff;
        padding: 12px 25px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        text-transform: uppercase;
        transition: background-color 0.3s;
    }

        .custom-btn:hover {
            background-color: #0056b3;
            cursor: pointer;
        }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 20px;
    }
</style>
