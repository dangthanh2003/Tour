@model QLTours.Models.User
@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="text-center mb-3">@ViewData["Title"]</h2>
        <p class="text-center text-muted">
            Vui lòng nhập địa chỉ email của bạn để nhận liên kết đặt lại mật khẩu.
        </p>

        <form method="post" asp-action="ForgotPassword">
            <div class="form-group mb-3">
                <label for="Email" class="form-label">Địa chỉ Email</label>
                <input type="email" class="form-control custom-input" id="Email" name="Email"
                       placeholder="Nhập email của bạn" required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg custom-btn">Gửi Liên Kết Đặt Lại Mật Khẩu</button>
            </div>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info mt-3 text-center">
                @ViewBag.Message
            </div>
        }
    </div>
</div>

<style>
    /* Custom Styles */
    .custom-input {
        font-size: 16px;
        padding: 10px;
        border-radius: 8px;
        background-color: #f1f3f5;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            background-color: #fff;
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    .custom-btn {
        background-color: #007bff;
        color: #fff;
        border-radius: 8px;
        padding: 12px 20px;
        font-size: 16px;
        text-transform: uppercase;
        border: none;
        transition: background-color 0.3s;
    }

        .custom-btn:hover {
            background-color: #0056b3;
            cursor: pointer;
        }

        .custom-btn:focus {
            outline: none;
        }
</style>
